<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".icon_change">

    <GridLayout
        android:id="@+id/iconGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- DEFAULT -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_default"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher_round"/>

                <RadioButton
                    android:id="@+id/rb_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:clickable="false"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- ICON 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_new"/>

                <RadioButton
                    android:id="@+id/rb_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:clickable="false"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- ICON 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_new2"/>

                <RadioButton
                    android:id="@+id/rb_icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:clickable="false"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- ICON 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ai"/>

                <RadioButton
                    android:id="@+id/rb_icon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:clickable="false"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <Button
        android:id="@+id/btnApply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apply Icon"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
